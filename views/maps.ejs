<!-- Default home page -->
<link type="text/css" href='http://sailsjs.org/styles/fonts.css' rel='stylesheet'/>
<style>
ya-map {
            display: block;
            width: 100%;
            height: 100%;
        }
</style>
<div ng-controller="MapsCtrl">
<div class="row">
	<div class="col-sm-12">
		<div class="form-group">
		  <label >Title:</label>
		  <input type="text" class="form-control" ng-model="routeTitle"/>
		</div>
		<div class="form-group">
		  <label >Description:</label>
		  <input type="text" class="form-control" ng-model="routeDescription"/>
		</div>
	</div>	
</div>
<div class="row">
    <div class="col-sm-12" style="height:500px">
	<ya-map ya-zoom="5" ya-center="[34.576128,57.131311]" ya-after-init="route($target)"></ya-map>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="btn-group btn-group-justified">
		  <a href="#" class="btn btn-default" ng-click="routeEdit()">{{ btnLabel }}</a>
		  <a href="#" class="btn btn-default" ng-click="SaveRoute()">Сохранить</a>
		</div>
	</div>
</div>

</div>
